<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Edit Event</title>

  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700,900" rel="stylesheet" />
  <link href="/css/sb-admin.min.css" rel="stylesheet" />
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body id="page-top">
  <div id="wrapper">
    <%- include('../partials/sidebar', { activePage: 'events' }) %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <%- include('../layouts/navbar', { event_organizer: event_organizer, success: success, error: error }) %>

        <div class="container-fluid">
          <h1 class="h3 mb-4 text-gray-800">Edit Event</h1>

          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
          <% } %>

          <form action="/events/<%= event._id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="editEventForm">

            <div class="form-group">
              <label for="title">Title *</label>
              <input type="text" name="title" id="title" class="form-control" value="<%= event.title %>" required />
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="date">Date *</label>
                <input type="date" name="date" id="date" class="form-control" value="<%= event.date ? event.date.toISOString().slice(0,10) : '' %>" required />
              </div>
              <div class="form-group col-md-3">
                <label for="time">Time</label>
                <input type="time" name="time" id="time" class="form-control" value="<%= event.time || '' %>" />
              </div>
            </div>

            <div class="form-group">
              <label for="location">Location *</label>
              <input type="text" name="location" id="location" class="form-control" value="<%= event.location %>" required />
            </div>

            <div class="form-group">
              <label for="category">Category </label>
              <input type="text" name="category" id="category" class="form-control" value="<%= event.category %>" required />
            </div>

            <div class="form-group">
              <label for="subcategory">Sub Category </label>
              <input type="text" name="subcategory" id="subcategory" class="form-control" value="<%= event.subcategory %>" required />
            </div>

            <div class="form-group">
              <label for="organizer">Organizer</label>
              <input type="text" name="organizer" id="organizer" class="form-control" value="<%= event.organizer %>" />
            </div>

            <div class="form-group">
              <label for="banner">Banner Image</label>
              <input type="file" name="banner" id="banner" class="form-control-file" />
              <% if (event.banner) { %>
                <img src="<%= event.banner %>" alt="Banner Image" style="width: 150px; margin-top: 10px;" />
              <% } %>
            </div>

            <hr />
            <h4>Ticket Tiers</h4>

            <div id="ticketTiersContainer">
              <% if (tiers && tiers.length > 0) { %>
                <% tiers.forEach(function(tier, index) { %>
                  <div class="ticket-tier form-row align-items-end mb-3">
                    <input type="hidden" name="tierId[]" value="<%= tier._id %>"/>
                    <div class="form-group col-md-3">
                      <input type="text" name="tierName[]" class="form-control" placeholder="Tier Name" value="<%= tier.name %>" required />
                    </div>
                    <div class="form-group col-md-3">
                      <input type="number" name="tierPrice[]" class="form-control" placeholder="Price" value="<%= tier.price %>" step="0.01" min="0" required />
                    </div>
                    <div class="form-group col-md-3">
                      <input type="number" name="tierQty[]" class="form-control" placeholder="Quantity" value="<%= tier.quantityAvailable %>" min="0" required />
                    </div>
                    <div class="form-group col-md-2">
                      <input type="text" name="tierBenefits[]" class="form-control" placeholder="Benefits (comma separated)" value="<%= tier.benefits.join(', ') %>" />
                    </div>
                    <div class="form-group col-md-1 text-center">
                      <button type="button" class="btn btn-danger remove-tier-btn" title="Remove Tier">&times;</button>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="ticket-tier form-row align-items-end mb-3">
                  <div class="form-group col-md-3">
                    <input type="text" name="tierName[]" class="form-control" placeholder="Tier Name" required />
                  </div>
                  <div class="form-group col-md-3">
                    <input type="number" name="tierPrice[]" class="form-control" placeholder="Price" step="0.01" min="0" required />
                  </div>
                  <div class="form-group col-md-3">
                    <input type="number" name="tierQty[]" class="form-control" placeholder="Quantity" min="0" required />
                  </div>
                  <div class="form-group col-md-2">
                    <input type="text" name="tierBenefits[]" class="form-control" placeholder="Benefits (comma separated)" />
                  </div>
                  <div class="form-group col-md-1 text-center">
                    <button type="button" class="btn btn-danger remove-tier-btn" title="Remove Tier">&times;</button>
                  </div>
                </div>
              <% } %>
            </div>

            <button type="button" id="addTierBtn" class="btn btn-secondary mb-3">
              <i class="fas fa-plus"></i> Add Tier
            </button>

            <button type="submit" class="btn btn-primary">Update Event</button>
            <a href="/events" class="btn btn-secondary">Cancel</a>
          </form>

        </div>

        <%- include('../partials/footer') %>
      </div>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
  <script src="/js/sb-admin.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#addTierBtn').click(function() {
        $('#ticketTiersContainer').append(`
          <div class="ticket-tier form-row align-items-end mb-3">
            <div class="form-group col-md-3"><input type="text" name="tierName[]" class="form-control" placeholder="Tier Name" required /></div>
            <div class="form-group col-md-3"><input type="number" name="tierPrice[]" class="form-control" placeholder="Price" step="0.01" min="0" required /></div>
            <div class="form-group col-md-3"><input type="number" name="tierQty[]" class="form-control" placeholder="Quantity" min="0" required /></div>
            <div class="form-group col-md-2"><input type="text" name="tierBenefits[]" class="form-control" placeholder="Benefits (comma separated)" /></div>
            <div class="form-group col-md-1 text-center"><button type="button" class="btn btn-danger remove-tier-btn" title="Remove Tier">&times;</button></div>
          </div>
        `);
      });

      $(document).on('click', '.remove-tier-btn', function() {
        $(this).closest('.ticket-tier').remove();
      });

      // Optional: auto-hide alerts
      setTimeout(() => {
        $('.alert').fadeOut('slow');
      }, 2500);
    });
  </script>

</body>

</html>
