<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin - User Registrations</title>

  <!-- Stylesheets -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700,900" rel="stylesheet" />
  <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  <link href="/css/admin.css" rel="stylesheet" />
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body>
  <div id="wrapper">
    <%- include('../layouts/sidebar', { activePage: 'users' }) %>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">

        <%- include('../layouts/navbar', { admin: admin, success: success, error: error }) %>

        <div class="container-fluid">
          <h1 class="h3 mb-4 text-gray-800">User Registrations & Tickets</h1>

          <div id="alert-container">
            <% if (error) { %>
              <div class="alert alert-danger">
                <%= error %>
              </div>
            <% } %>
            <% if (success) { %>
              <div class="alert alert-success">
                <%= success %>
              </div>
            <% } %>
          </div>

          <div class="card shadow mb-4">
            <div class="card-body">
              <div class="table-responsive">
                <table id="usersTable" class="table table-bordered" width="100%" cellspacing="0">
                  <thead class="thead-dark">
                    <tr>
                      <th>User Name<br><input type="text" placeholder="Search User" class="column-search" /></th>
                      <th>User Email<br><input type="text" placeholder="Search Email" class="column-search" /></th>
                      <th>Event<br><input type="text" placeholder="Search Event" class="column-search" /></th>
                      <th>Ticket Tier<br><input type="text" placeholder="Search Tier" class="column-search" /></th>
                      <th>Ticket Code<br><input type="text" placeholder="Search Code" class="column-search" /></th>
                      <th>Payment Status</th>
                      <th>Check-In Status</th>
                      <th>Purchased At</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(user => { %>
                      <% user.tickets.forEach(ticket => { %>
                        <tr>
                          <td>
                            <%= user.name %>
                          </td>
                          <td>
                            <%= user.email %>
                          </td>
                          <td>
                            <%= ticket.event?.title || 'N/A' %>
                          </td>
                          <td>
                            <%= ticket.tier?.name || 'N/A' %>
                          </td>
                          <td>
                            <%= ticket.ticketCode %>
                          </td>
                          <td>
                            <% if (ticket.paymentStatus === 'paid') { %>
                              <span class="text-success">Paid</span>
                            <% } else if (ticket.paymentStatus === 'pending') { %>
                              <span class="text-warning">Pending</span>
                            <% } else { %>
                              <span class="text-danger">Failed</span>
                            <% } %>
                          </td>
                          <td>
                            <% if (ticket.checkedIn) { %>
                              <span class="text-success">Checked In</span>
                            <% } else { %>
                              <span class="text-secondary">Not Checked In</span>
                            <% } %>
                          </td>
                          <td>
                            <%= new Date(ticket.purchasedAt).toLocaleString() %>
                          </td>
                          <td>
                            <form action="/admin/tickets/<%= ticket._id %>?_method=DELETE" method="POST" style="display:inline;">
                              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this ticket? This will not delete the user.')">
                                Delete Ticket
                              </button>
                            </form>
                          </td>
                        </tr>
                      <% }) %>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>

        <%- include('../layouts/footer') %>

      </div>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
  <script src="/js/sb-admin-2.min.js"></script>

  <script>
    $(document).ready(function () {
      var table = $('#usersTable').DataTable({
        paging: true,
        searching: true,
        ordering: true,
        order: [[0, "asc"]],
        lengthMenu: [ [10, 25, 50, -1], [10, 25, 50, "All"] ],
        columnDefs: [
          { orderable: false, targets: 8 } // Disable ordering on Actions column
        ]
      });

      $('.column-search').on('keyup change clear', function () {
        var colIndex = $(this).parent().index();
        table.column(colIndex).search(this.value).draw();
      });

      // Auto fade alerts
      setTimeout(() => {
        $(".alert").fadeOut('slow');
      }, 3000);
    });
  </script>
</body>

</html>
