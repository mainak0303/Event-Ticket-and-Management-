<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Organizer Details - Admin</title>

  <!-- Stylesheets -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700,900" rel="stylesheet" />
  <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  <link href="/css/admin.css" rel="stylesheet" />
</head>

<body>
  <div id="wrapper">
    <%- include('../../layouts/sidebar', { activePage: 'organizers' }) %>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">

        <%- include('../../layouts/navbar', { admin: admin, success: success, error: error }) %>

        <div class="container-fluid">
          <h1 class="h3 mb-4 text-gray-800">Organizer Details - <%= organizer.name %></h1>

          <div id="alert-container">
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <% if (success) { %>
              <div class="alert alert-success"><%= success %></div>
            <% } %>
          </div>

          <div class="card shadow mb-4">
            <div class="card-body">
              <p><strong>Name:</strong> <%= organizer.name %></p>
              <p><strong>Email:</strong> <%= organizer.email %></p>
              <p><strong>Registered On:</strong> <%= new Date(organizer.createdAt).toLocaleString() %></p>

              <h3 class="mt-4">Events Created</h3>
              <% if (events && events.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="thead-light">
                      <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Tickets Sold</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% events.forEach(event => { %>
                        <tr>
                          <td><%= event.title %></td>
                          <td><%= new Date(event.date).toLocaleDateString() %></td>
                          <td><%= event.time || '-' %></td>
                          <td><%= event.location %></td>
                          <td><%= event.ticketsSold || 0 %></td>
                          <td><%= event.status %></td>
                          <td>
                            <a href="/admin/events/<%= event._id %>" class="btn btn-sm btn-info">View</a>
                            <!-- You can add edit/delete buttons here if required -->
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p>This organizer has not created any events.</p>
              <% } %>

              <a href="/admin/organizers" class="btn btn-secondary mt-3">Back to Organizers</a>
            </div>
          </div>
        </div>

        <%- include('../../layouts/footer') %>

      </div>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sb-admin-2.min.js"></script>

  <script>
    $(document).ready(function () {
      // Auto fade alerts
      setTimeout(() => {
        $(".alert").fadeOut('slow');
      }, 3000);
    });
  </script>
</body>

</html>
