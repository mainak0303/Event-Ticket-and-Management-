<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Events - Admin</title>
  <!-- Stylesheets -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700,900" rel="stylesheet" />
  <link href="/css/sb-admin.css" rel="stylesheet" />
</head>

<body id="page-top">
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../layouts/sidebar', { activePage: activePage || '' }) %>

    <!-- Correct placement of id and classes -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Navbar -->
        <%- include('../layouts/navbar', { admin: admin, success, error }) %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <h1 class="h3 mb-4 text-gray-800">All Events</h1>

          <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= success %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>

          <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>

          <!-- Responsive table wrapper -->
          
            <table class="table table-bordered" id="allEventsTable" width="100%" cellspacing="0">
              <thead class="thead-dark">
                <tr>
                  <th>S.No</th>
                  <th>Banner</th>
                  <th>Title</th>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Location</th>
                  <th>Category</th>
                  <th>Subcategory</th>
                  <th>Organizer</th>
                  <th>Organizer Email</th>
                  <th>Ticket Tiers</th>
                  <th>Approval Status</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% let serial = 1; %>
                <% events.forEach(event => { %>
                  <tr>
                    <td><%= serial++ %></td>
                    <td>
                      <% if (event.banner) { %>
                        <img src="/uploads/<%= event.banner %>" alt="Banner" style="width: 70px; height: 50px; object-fit: cover; border-radius: 4px;">
                      <% } else { %>
                        N/A
                      <% } %>
                    </td>
                    <td><%= event.title %></td>
                    <td><%= new Date(event.date).toLocaleDateString('en-IN', { dateStyle: 'medium' }) %></td>
                    <td><%= event.time || '-' %></td>
                    <td><%= event.location %></td>
                    <td><%= event.category?.name || '-' %></td>
                    <td><%= event.subcategory || '-' %></td>
                    <td><%= event.createdBy?.name || 'Unknown' %></td>
                    <td><%= event.createdBy?.email || 'Unknown' %></td>
                    <td>
                      <% if (event.tiers && event.tiers.length) { %>
                        <ul class="list-unstyled mb-0">
                          <% event.tiers.forEach(tier => { %>
                            <li>
                              <strong><%= tier.name %></strong>: â‚¹<%= tier.price %> (Qty: <%= tier.quantityAvailable %>)
                              <% if (tier.benefits && tier.benefits.length) { %>
                                <br><small>Benefits: <%= tier.benefits.join(', ') %></small>
                              <% } %>
                            </li>
                          <% }) %>
                        </ul>
                      <% } else { %>
                        No Tiers
                      <% } %>
                    </td>
                    <td style="text-transform: capitalize;"><%= event.approvalStatus %></td>
                    <td><%= event.status %></td>
                    <td>
                      <a href="/admin/events/<%= event._id %>" class="btn btn-info btn-sm mb-1">View</a>

                      <% if (event.approvalStatus === 'pending') { %>
                        <form action="/admin/events/approve/<%= event._id %>" method="POST" style="display:inline-block;">
                          <button type="submit" class="btn btn-success btn-sm mb-1" onclick="return confirm('Approve this event?')">Approve</button>
                        </form>

                        <form action="/admin/events/disapprove/<%= event._id %>" method="POST" style="display:inline-block;">
                          <button type="submit" class="btn btn-warning btn-sm mb-1" onclick="return confirm('Disapprove this event?')">Disapprove</button>
                        </form>
                      <% } else { %>
                        <span class="text-muted">Processed</span>
                      <% } %>

                      <form action="/admin/events/delete/<%= event._id %>" method="POST" style="display:inline-block;">
  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this event?')">Delete</button>
</form>

                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          

        </div>

        <%- include('../layouts/footer') %>

      </div>
    </div>
  </div>

  <a class="scroll-to-top" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
  <script src="/js/sb-admin.js"></script>

  <script>
    $(document).ready(function () {
      $('#allEventsTable').DataTable({
        scrollX: true
      });
      setTimeout(() => {
        $('.alert-dismissible').fadeOut('slow');
      }, 3000);
    });
  </script>
</body>

</html>
